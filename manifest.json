{
  "manifest_version": 2,
  "version": "0.5",
  "name": "Research SEO",
  "short_name": "terumit",
  "description": "SEOに関するタグを検知、参照するツール",
  "browser_action": {
    "default_title": "terumit",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts":[
    {
      "matches":["https://*/*","http://*/*"],
      "js":[
        "script.js",
        "jquery.min.js"
      ]
    }
  ],
  "icons" : {
     "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "*://*/*/",
    "webRequest",
    "tabs"
  ]
}
